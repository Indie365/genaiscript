{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run - cli",
            "program": "${workspaceFolder}/packages/cli/built/genaiscript.cjs",
            "request": "launch",
            "skipFiles": ["<node_internals>/**"],
            "type": "node",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "npm: compile-cli",
            "args": ["run", "packages/sample/genaisrc/summarize-import.genai.mjs", "packages/sample/src/questions.md"]
        },
        {
            "name": "Run - sample",
            "type": "extensionHost",
            "debugWebWorkerHost": true,
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/packages/vscode",
                "${workspaceFolder}/packages/sample"
            ],
            "outFiles": ["${workspaceFolder}/packages/vscode/built/**"],
            "preLaunchTask": "npm: compile",
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "cwd": "${workspaceFolder}/packages/vscode"
        },
        {
            "name": "Run - Docs",
            "type": "extensionHost",
            "debugWebWorkerHost": true,
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/packages/vscode",
                "${workspaceFolder}/docs"
            ],
            "outFiles": ["${workspaceFolder}/packages/vscode/built/**"],
            "preLaunchTask": "npm: compile",
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "cwd": "${workspaceFolder}/packages/vscode"
        }
    ]
}
